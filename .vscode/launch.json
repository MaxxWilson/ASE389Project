{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Atlas Main",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/simulator/pybullet/atlas_main.py",
            "console": "integratedTerminal",
            "python": "${env:HOME}/anaconda3/envs/pypnc/bin/python",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Interactive RVIZ Wrapper",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/atlas_ros/atlas_ros/interactive_rviz_wrapper.py",
            "console": "integratedTerminal",
            "python": "${env:HOME}/anaconda3/envs/pypnc/bin/python3",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "Debug TOWR+",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_towr/atlas_forward_walk",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ],
        }
    ]
}